# Virtual Prism Backend — Environment Variables
# Copy to .env and fill in your values

# ── Security ──────────────────────────────────────────────────────────────────
# API key required for all non-public endpoints (X-Api-Key header)
API_SECRET_KEY=your-secret-key-here

# Instagram Webhook hub verification token (set in Meta Developer Console)
WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# ── Instagram / Meta ──────────────────────────────────────────────────────────
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=
INSTAGRAM_REDIRECT_URI=http://localhost:8000/api/instagram/callback

# Optional: pre-seed token (bypass OAuth for development)
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_USER_ID=
INSTAGRAM_USERNAME=

# ── AI Services ───────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=
REPLICATE_API_TOKEN=

# ── Cloudinary ────────────────────────────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ── Telegram (optional notifications) ────────────────────────────────────────
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ── Frontend ──────────────────────────────────────────────────────────────────
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
